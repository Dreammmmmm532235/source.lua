-- Récupère le joueur
local player = game.Players.LocalPlayer
local screenGui = Instance.new("ScreenGui")
screenGui.Parent = player:WaitForChild("PlayerGui")

-- Crée le cadre principal (fenêtre style Chrome)
local frame = Instance.new("Frame")
frame.Size = UDim2.new(0, 300, 0, 200)
frame.Position = UDim2.new(0.5, -150, 0.5, -100) -- Centré
frame.BackgroundColor3 = Color3.fromRGB(240, 240, 240) -- Fond gris clair
frame.BorderSizePixel = 0
frame.Parent = screenGui

-- Ajoute des coins arrondis (style Chrome)
local corner = Instance.new("UICorner")
corner.CornerRadius = UDim.new(0, 10) -- Rayon de 10 pixels
corner.Parent = frame

-- Barre de titre (style Chrome)
local titleBar = Instance.new("Frame")
titleBar.Size = UDim2.new(1, 0, 0, 30)
titleBar.BackgroundColor3 = Color3.fromRGB(230, 230, 230) -- Gris très clair
titleBar.BorderSizePixel = 0
titleBar.Parent = frame

local titleCorner = Instance.new("UICorner")
titleCorner.CornerRadius = UDim.new(0, 10)
titleCorner.Parent = titleBar

-- Boutons de fenêtre (rouge, jaune, vert)
local closeButton = Instance.new("TextButton")
closeButton.Size = UDim2.new(0, 12, 0, 12)
closeButton.Position = UDim2.new(0, 10, 0.5, -6)
closeButton.BackgroundColor3 = Color3.fromRGB(255, 95, 87) -- Rouge
closeButton.BorderSizePixel = 0
closeButton.Text = ""
closeButton.Parent = titleBar
local closeCorner = Instance.new("UICorner")
closeCorner.CornerRadius = UDim.new(1, 0) -- Cercle
closeCorner.Parent = closeButton

local minimizeButton = Instance.new("TextButton")
minimizeButton.Size = UDim2.new(0, 12, 0, 12)
minimizeButton.Position = UDim2.new(0, 28, 0.5, -6)
minimizeButton.BackgroundColor3 = Color3.fromRGB(255, 189, 46) -- Jaune
minimizeButton.BorderSizePixel = 0
minimizeButton.Text = ""
minimizeButton.Parent = titleBar
local minCorner = Instance.new("UICorner")
minCorner.CornerRadius = UDim.new(1, 0)
minCorner.Parent = minimizeButton

local maximizeButton = Instance.new("TextButton")
maximizeButton.Size = UDim2.new(0, 12, 0, 12)
maximizeButton.Position = UDim2.new(0, 46, 0.5, -6)
maximizeButton.BackgroundColor3 = Color3.fromRGB(39, 201, 63) -- Vert
maximizeButton.BorderSizePixel = 0
maximizeButton.Text = ""
maximizeButton.Parent = titleBar
local maxCorner = Instance.new("UICorner")
maxCorner.CornerRadius = UDim.new(1, 0)
maxCorner.Parent = maximizeButton

-- Titre de la fenêtre
local titleLabel = Instance.new("TextLabel")
titleLabel.Size = UDim2.new(0, 200, 0, 30)
titleLabel.Position = UDim2.new(0.5, -100, 0, 0)
titleLabel.BackgroundTransparency = 1
titleLabel.Text = "Leina"
titleLabel.TextColor3 = Color3.fromRGB(60, 60, 60)
titleLabel.Font = Enum.Font.SourceSansBold
titleLabel.TextSize = 18
titleLabel.Parent = titleBar

-- Fonctionnalités des boutons
closeButton.MouseButton1Click:Connect(function()
    screenGui:Destroy() -- Ferme la GUI
end)

minimizeButton.MouseButton1Click:Connect(function()
    frame.Visible = false -- Cache la fenêtre
end)

maximizeButton.MouseButton1Click:Connect(function()
    if frame.Size == UDim2.new(0, 300, 0, 200) then
        frame.Size = UDim2.new(0, 400, 0, 300) -- Agrandit
        frame.Position = UDim2.new(0.5, -200, 0.5, -150)
    else
        frame.Size = UDim2.new(0, 300, 0, 200) -- Restaure
        frame.Position = UDim2.new(0.5, -150, 0.5, -100)
    end
end)

-- Logique pour déplacer le GUI avec la souris
local dragging = false
local dragStart = nil
local startPos = nil

titleBar.InputBegan:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 then
        dragging = true
        dragStart = input.Position
        startPos = frame.Position
    end
end)

titleBar.InputChanged:Connect(function(input)
    if dragging and input.UserInputType == Enum.UserInputType.MouseMovement then
        local delta = input.Position - dragStart
        frame.Position = UDim2.new(
            startPos.X.Scale,
            startPos.X.Offset + delta.X,
            startPos.Y.Scale,
            startPos.Y.Offset + delta.Y
        )
    end
end)

titleBar.InputEnded:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 then
        dragging = false
    end
end)
