-- LocalScript dans StarterGui

local player = game.Players.LocalPlayer
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "ChromeLikeGUI"
screenGui.Parent = player:WaitForChild("PlayerGui")
screenGui.ResetOnSpawn = true

-- Frame principal (fenêtre)
local frame = Instance.new("Frame")
frame.Name = "Window"
frame.Size = UDim2.new(0, 400, 0, 300)
frame.Position = UDim2.new(0.5, -200, 0.5, -150)
frame.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
frame.BorderSizePixel = 0
frame.Parent = screenGui

local uiCorner = Instance.new("UICorner")
uiCorner.CornerRadius = UDim.new(0, 8)
uiCorner.Parent = frame

-- Barre de titre
local titleBar = Instance.new("Frame")
titleBar.Name = "TitleBar"
titleBar.Size = UDim2.new(1, 0, 0, 30)
titleBar.Position = UDim2.new(0, 0, 0, 0)
titleBar.BackgroundColor3 = Color3.fromRGB(240, 240, 240)
titleBar.BorderSizePixel = 0
titleBar.Parent = frame

local titleCorner = Instance.new("UICorner")
titleCorner.CornerRadius = UDim.new(0, 8)
titleCorner.Parent = titleBar

local titleText = Instance.new("TextLabel")
titleText.Name = "Title"
titleText.Size = UDim2.new(0.7, 0, 1, 0)
titleText.Position = UDim2.new(0.05, 0, 0, 0)
titleText.BackgroundTransparency = 1
titleText.Text = "Nouvel Onglet"
titleText.TextColor3 = Color3.fromRGB(60, 60, 60)
titleText.TextSize = 14
titleText.Font = Enum.Font.SourceSans
titleText.TextXAlignment = Enum.TextXAlignment.Left
titleText.Parent = titleBar

-- Bouton Fermer (rouge)
local closeButton = Instance.new("TextButton")
closeButton.Name = "CloseButton"
closeButton.Size = UDim2.new(0, 20, 0, 20)
closeButton.Position = UDim2.new(1, -25, 0, 5)
closeButton.BackgroundColor3 = Color3.fromRGB(255, 95, 87)
closeButton.BorderSizePixel = 0
closeButton.Text = ""
closeButton.Parent = titleBar

local closeCorner = Instance.new("UICorner")
closeCorner.CornerRadius = UDim.new(1, 0)
closeCorner.Parent = closeButton

-- Bouton Réduire (jaune)
local minimizeButton = Instance.new("TextButton")
minimizeButton.Name = "MinimizeButton"
minimizeButton.Size = UDim2.new(0, 20, 0, 20)
minimizeButton.Position = UDim2.new(1, -50, 0, 5)
minimizeButton.BackgroundColor3 = Color3.fromRGB(255, 189, 46)
minimizeButton.BorderSizePixel = 0
minimizeButton.Text = ""
minimizeButton.Parent = titleBar

local minimizeCorner = Instance.new("UICorner")
minimizeCorner.CornerRadius = UDim.new(1, 0)
minimizeCorner.Parent = minimizeButton

-- Bouton Agrandir (vert)
local maximizeButton = Instance.new("TextButton")
maximizeButton.Name = "MaximizeButton"
maximizeButton.Size = UDim2.new(0, 20, 0, 20)
maximizeButton.Position = UDim2.new(1, -75, 0, 5)
maximizeButton.BackgroundColor3 = Color3.fromRGB(39, 201, 63)
maximizeButton.BorderSizePixel = 0
maximizeButton.Text = ""
maximizeButton.Parent = titleBar

local maximizeCorner = Instance.new("UICorner")
maximizeCorner.CornerRadius = UDim.new(1, 0)
maximizeCorner.Parent = maximizeButton

-- Zone pour les onglets
local tabBar = Instance.new("Frame")
tabBar.Name = "TabBar"
tabBar.Size = UDim2.new(1, 0, 0, 30)
tabBar.Position = UDim2.new(0, 0, 0, 30)
tabBar.BackgroundColor3 = Color3.fromRGB(245, 245, 245)
tabBar.BorderSizePixel = 0
tabBar.Parent = frame

-- Zone de contenu
local contentArea = Instance.new("Frame")
contentArea.Name = "ContentArea"
contentArea.Size = UDim2.new(1, 0, 0, 240)
contentArea.Position = UDim2.new(0, 0, 0, 60)
contentArea.BackgroundColor3 = Color3.fromRGB(250, 250, 250)
contentArea.BorderSizePixel = 0
contentArea.Parent = frame

-- Gestion du déplacement
local dragging
local dragInput
local startPos
local startDrag
local connections = {}
local tabs = {}
local currentTab = nil

table.insert(connections, titleBar.InputBegan:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 then
        dragging = true
        startPos = input.Position
        startDrag = frame.Position
    end
end))

table.insert(connections, titleBar.InputChanged:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseMovement and dragging then
        local delta = input.Position - startPos
        frame.Position = UDim2.new(
            startDrag.X.Scale,
            startDrag.X.Offset + delta.X,
            startDrag.Y.Scale,
            startDrag.Y.Offset + delta.Y
        )
    end
end))

table.insert(connections, titleBar.InputEnded:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 then
        dragging = false
    end
end))

-- Fonction pour fermer le GUI
local function closeGUI()
    for _, connection in pairs(connections) do
        connection:Disconnect()
    end
    connections = {}
    screenGui.Enabled = false
    print("GUI fermé et scripts arrêtés")
end

-- Fonction pour créer un onglet sans nom
local function createTab(contentFunction)
    local tabButton = Instance.new("TextButton")
    tabButton.Size = UDim2.new(0, 50, 1, 0) -- Plus petit sans texte
    tabButton.Position = UDim2.new(0, #tabs * 50, 0, 0)
    tabButton.BackgroundColor3 = Color3.fromRGB(220, 220, 220)
    tabButton.BorderSizePixel = 0
    tabButton.Text = "" -- Pas de texte
    tabButton.Parent = tabBar

    local tabCorner = Instance.new("UICorner")
    tabCorner.CornerRadius = UDim.new(0, 5)
    tabCorner.Parent = tabButton

    -- Conteneur pour le contenu de l'onglet
    local tabContent = Instance.new("Frame")
    tabContent.Size = UDim2.new(1, 0, 1, 0)
    tabContent.BackgroundTransparency = 1
    tabContent.Visible = false
    tabContent.Parent = contentArea

    -- Exécute la fonction de contenu si fournie
    if contentFunction then
        contentFunction(tabContent)
    end

    -- Gestion du clic sur l'onglet
    tabButton.MouseButton1Click:Connect(function()
        if currentTab then
            currentTab.Content.Visible = false
            currentTab.Button.BackgroundColor3 = Color3.fromRGB(220, 220, 220)
        end
        tabContent.Visible = true
        tabButton.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
        currentTab = {Button = tabButton, Content = tabContent}
    end)

    table.insert(tabs, {Button = tabButton, Content = tabContent})
    if not currentTab then
        tabButton:Activate() -- Active le premier onglet par défaut
    end
end

-- Liste des liens GitHub (sans noms affichés)
local githubLinks = {
    "https://raw.githubusercontent.com/Dreammmmmm532235/source.lua/refs/heads/main/Script%20player",
    "https://raw.githubusercontent.com/username/repo/main/tools.lua", -- Exemple
    "https://raw.githubusercontent.com/username/repo/main/settings.lua", -- Exemple
    "https://raw.githubusercontent.com/username/repo/main/chat.lua", -- Exemple
    "https://raw.githubusercontent.com/username/repo/main/stats.lua" -- Exemple
}

-- Charge les onglets depuis les liens GitHub
for i, url in pairs(githubLinks) do
    spawn(function()
        local success, contentFunction = pcall(function()
            return loadstring(game:HttpGet(url))()
        end)
        if success then
            createTab(contentFunction)
        else
            createTab(function(container)
                local errorLabel = Instance.new("TextLabel")
                errorLabel.Size = UDim2.new(1, 0, 1, 0)
                errorLabel.BackgroundTransparency = 1
                errorLabel.Text = "Erreur : Chargement échoué #" .. i
                errorLabel.TextColor3 = Color3.fromRGB(255, 0, 0)
                errorLabel.TextSize = 16
                errorLabel.Parent = container
            end)
        end
    end)
end

-- Associe la fermeture au bouton rouge
closeButton.MouseButton1Click:Connect(closeGUI)

print("GUI Chrome-like créé avec onglets GitHub sans noms !")
loadstring(game:HttpGet('https://raw.githubusercontent.com/Dreammmmmm532235/source.lua/refs/heads/main/Script%20player'))()
