-- Script Player (à héberger sur GitHub : https://raw.githubusercontent.com/Dreammmmmm532235/source.lua/refs/heads/main/Script%20player)

return function(container)
    -- Label pour afficher le nom du joueur
    local playerLabel = Instance.new("TextLabel")
    playerLabel.Size = UDim2.new(1, 0, 0, 30)
    playerLabel.Position = UDim2.new(0, 0, 0, 0)
    playerLabel.BackgroundTransparency = 1
    playerLabel.Text = "Joueur : " .. game.Players.LocalPlayer.Name
    playerLabel.TextColor3 = Color3.fromRGB(0, 0, 0)
    playerLabel.TextSize = 20
    playerLabel.Font = Enum.Font.SourceSans
    playerLabel.Parent = container

    -- Label pour la vitesse
    local speedLabel = Instance.new("TextLabel")
    speedLabel.Size = UDim2.new(0, 100, 0, 20)
    speedLabel.Position = UDim2.new(0, 10, 0, 40)
    speedLabel.BackgroundTransparency = 1
    speedLabel.Text = "Vitesse :"
    speedLabel.TextColor3 = Color3.fromRGB(0, 0, 0)
    speedLabel.TextSize = 16
    speedLabel.Font = Enum.Font.SourceSans
    speedLabel.Parent = container

    -- Champ de texte pour la vitesse
    local speedBox = Instance.new("TextBox")
    speedBox.Size = UDim2.new(0, 100, 0, 30)
    speedBox.Position = UDim2.new(0, 120, 0, 35)
    speedBox.BackgroundColor3 = Color3.fromRGB(230, 230, 230)
    speedBox.Text = "16"
    speedBox.TextColor3 = Color3.fromRGB(0, 0, 0)
    speedBox.TextSize = 16
    speedBox.Font = Enum.Font.SourceSans
    speedBox.Parent = container

    local speedCorner = Instance.new("UICorner")
    speedCorner.CornerRadius = UDim.new(0, 5)
    speedCorner.Parent = speedBox

    -- Appliquer la vitesse entrée
    speedBox.FocusLost:Connect(function(enterPressed)
        if enterPressed then
            local character = game.Players.LocalPlayer.Character
            if character and character:FindFirstChild("Humanoid") then
                local speed = tonumber(speedBox.Text)
                if speed then
                    character.Humanoid.WalkSpeed = math.clamp(speed, 0, 1000) -- Limite raisonnable
                end
            end
        end
    end)

    -- Label pour le saut
    local jumpLabel = Instance.new("TextLabel")
    jumpLabel.Size = UDim2.new(0, 100, 0, 20)
    jumpLabel.Position = UDim2.new(0, 10, 0, 75)
    jumpLabel.BackgroundTransparency = 1
    jumpLabel.Text = "Saut :"
    jumpLabel.TextColor3 = Color3.fromRGB(0, 0, 0)
    jumpLabel.TextSize = 16
    jumpLabel.Font = Enum.Font.SourceSans
    jumpLabel.Parent = container

    -- Champ de texte pour le saut
    local jumpBox = Instance.new("TextBox")
    jumpBox.Size = UDim2.new(0, 100, 0, 30)
    jumpBox.Position = UDim2.new(0, 120, 0, 70)
    jumpBox.BackgroundColor3 = Color3.fromRGB(230, 230, 230)
    jumpBox.Text = "50"
    jumpBox.TextColor3 = Color3.fromRGB(0, 0, 0)
    jumpBox.TextSize = 16
    jumpBox.Font = Enum.Font.SourceSans
    jumpBox.Parent = container

    local jumpCorner = Instance.new("UICorner")
    jumpCorner.CornerRadius = UDim.new(0, 5)
    jumpCorner.Parent = jumpBox

    -- Appliquer le saut entré
    jumpBox.FocusLost:Connect(function(enterPressed)
        if enterPressed then
            local character = game.Players.LocalPlayer.Character
            if character and character:FindFirstChild("Humanoid") then
                local jump = tonumber(jumpBox.Text)
                if jump then
                    character.Humanoid.JumpPower = math.clamp(jump, 0, 1000) -- Limite raisonnable
                    if character.Humanoid.UseJumpPower == false then
                        character.Humanoid.JumpHeight = math.clamp(jump, 0, 1000)
                    end
                end
            end
        end
    end)

    -- Bouton pour réinitialiser aux valeurs par défaut
    local defaultButton = Instance.new("TextButton")
    defaultButton.Size = UDim2.new(0, 150, 0, 40)
    defaultButton.Position = UDim2.new(0, 10, 0, 110)
    defaultButton.BackgroundColor3 = Color3.fromRGB(255, 165, 0)
    defaultButton.Text = "Par Défaut"
    defaultButton.TextColor3 = Color3.fromRGB(255, 255, 255)
    defaultButton.TextSize = 16
    defaultButton.Font = Enum.Font.SourceSans
    defaultButton.Parent = container

    local defaultCorner = Instance.new("UICorner")
    defaultCorner.CornerRadius = UDim.new(0, 5)
    defaultCorner.Parent = defaultButton

    defaultButton.MouseButton1Click:Connect(function()
        local character = game.Players.LocalPlayer.Character
        if character and character:FindFirstChild("Humanoid") then
            character.Humanoid.WalkSpeed = 16
            character.Humanoid.JumpPower = 50
            if character.Humanoid.UseJumpPower == false then
                character.Humanoid.JumpHeight = 7.2
            end
            speedBox.Text = "16"
            jumpBox.Text = "50"
        end
    end)
end
