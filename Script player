local player = game.Players.LocalPlayer
local function getHumanoid()
    if player.Character then
        return player.Character:FindFirstChild("Humanoid")
    end
    return nil
end
local function createSpeedUI(parentFrame)
    local speedLabel = Instance.new("TextLabel")
    speedLabel.Name = "SpeedLabel"
    speedLabel.Size = UDim2.new(0, 100, 0, 30)
    speedLabel.Position = UDim2.new(0, 10, 0, 10)
    speedLabel.BackgroundTransparency = 1
    speedLabel.Text = "Walk Speed:"
    speedLabel.TextColor3 = Color3.fromRGB(60, 60, 60)
    speedLabel.TextSize = 14
    speedLabel.Font = Enum.Font.SourceSans
    speedLabel.Parent = parentFrame

    local speedInput = Instance.new("TextBox")
    speedInput.Name = "SpeedInput"
    speedInput.Size = UDim2.new(0, 60, 0, 30)
    speedInput.Position = UDim2.new(0, 120, 0, 10)
    speedInput.BackgroundColor3 = Color3.fromRGB(240, 240, 240)
    speedInput.Text = getHumanoid() and tostring(getHumanoid().WalkSpeed) or "16"
    speedInput.TextColor3 = Color3.fromRGB(60, 60, 60)
    speedInput.TextSize = 14
    speedInput.Font = Enum.Font.SourceSans
    speedInput.Parent = parentFrame

    local speedInputCorner = Instance.new("UICorner")
    speedInputCorner.CornerRadius = UDim.new(0, 8)
    speedInputCorner.Parent = speedInput

    local applyButton = Instance.new("TextButton")
    applyButton.Name = "ApplyButton"
    applyButton.Size = UDim2.new(0, 80, 0, 30)
    applyButton.Position = UDim2.new(0, 190, 0, 10)
    applyButton.BackgroundColor3 = Color3.fromRGB(39, 201, 63)
    applyButton.Text = "Apply"
    applyButton.TextColor3 = Color3.fromRGB(255, 255, 255)
    applyButton.TextSize = 14
    applyButton.Font = Enum.Font.SourceSans
    applyButton.Parent = parentFrame

    local applyButtonCorner = Instance.new("UICorner")
    applyButtonCorner.CornerRadius = UDim.new(0, 8)
    applyButtonCorner.Parent = applyButton

    player.CharacterAdded:Connect(function()
        local humanoid = getHumanoid()
        if humanoid then
            speedInput.Text = tostring(humanoid.WalkSpeed)
        end
    end)

    applyButton.MouseButton1Click:Connect(function()
        local humanoid = getHumanoid()
        if humanoid then
            local newSpeed = tonumber(speedInput.Text)
            if newSpeed and newSpeed >= 0 then
                humanoid.WalkSpeed = newSpeed
                print("Vitesse modifiée à : " .. newSpeed)
            else
                warn("Entrez une vitesse valide (nombre positif)")
            end
        else
            warn("Personnage non chargé")
        end
    end)
end

local playerGui = player:WaitForChild("PlayerGui")
local screenGui = playerGui:WaitForChild("TabLoaderGUI", 5)
if screenGui then
    local contentFrame = screenGui:WaitForChild("Window"):WaitForChild("ContentFrame")
    createSpeedUI(contentFrame)
else
    warn("TabLoaderGUI non trouvé !")
end

print("Script Player chargé !")
