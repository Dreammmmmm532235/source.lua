-- Script Player (à héberger sur GitHub, par exemple : https://raw.githubusercontent.com/Dreammmmmm532235/source.lua/refs/heads/main/Script%20player)

return function(container)
    -- Label pour afficher le nom du joueur
    local playerLabel = Instance.new("TextLabel")
    playerLabel.Size = UDim2.new(1, 0, 0, 30)
    playerLabel.Position = UDim2.new(0, 0, 0, 0)
    playerLabel.BackgroundTransparency = 1
    playerLabel.Text = "Joueur : " .. game.Players.LocalPlayer.Name
    playerLabel.TextColor3 = Color3.fromRGB(0, 0, 0)
    playerLabel.TextSize = 20
    playerLabel.Font = Enum.Font.SourceSans
    playerLabel.Parent = container

    -- Bouton pour augmenter la vitesse
    local speedUpButton = Instance.new("TextButton")
    speedUpButton.Size = UDim2.new(0, 150, 0, 40)
    speedUpButton.Position = UDim2.new(0, 10, 0, 40)
    speedUpButton.BackgroundColor3 = Color3.fromRGB(0, 255, 0)
    speedUpButton.Text = "Vitesse + (32)"
    speedUpButton.TextColor3 = Color3.fromRGB(255, 255, 255)
    speedUpButton.TextSize = 16
    speedUpButton.Font = Enum.Font.SourceSans
    speedUpButton.Parent = container

    speedUpButton.MouseButton1Click:Connect(function()
        local character = game.Players.LocalPlayer.Character
        if character and character:FindFirstChild("Humanoid") then
            character.Humanoid.WalkSpeed = 32
        end
    end)

    -- Bouton pour réinitialiser la vitesse
    local speedResetButton = Instance.new("TextButton")
    speedResetButton.Size = UDim2.new(0, 150, 0, 40)
    speedResetButton.Position = UDim2.new(0, 170, 0, 40)
    speedResetButton.BackgroundColor3 = Color3.fromRGB(255, 165, 0)
    speedResetButton.Text = "Vitesse Normal (16)"
    speedResetButton.TextColor3 = Color3.fromRGB(255, 255, 255)
    speedResetButton.TextSize = 16
    speedResetButton.Font = Enum.Font.SourceSans
    speedResetButton.Parent = container

    speedResetButton.MouseButton1Click:Connect(function()
        local character = game.Players.LocalPlayer.Character
        if character and character:FindFirstChild("Humanoid") then
            character.Humanoid.WalkSpeed = 16
        end
    end)

    -- Bouton pour augmenter le saut
    local jumpUpButton = Instance.new("TextButton")
    jumpUpButton.Size = UDim2.new(0, 150, 0, 40)
    jumpUpButton.Position = UDim2.new(0, 10, 0, 90)
    jumpUpButton.BackgroundColor3 = Color3.fromRGB(0, 191, 255)
    jumpUpButton.Text = "Saut + (75)"
    jumpUpButton.TextColor3 = Color3.fromRGB(255, 255, 255)
    jumpUpButton.TextSize = 16
    jumpUpButton.Font = Enum.Font.SourceSans
    jumpUpButton.Parent = container

    jumpUpButton.MouseButton1Click:Connect(function()
        local character = game.Players.LocalPlayer.Character
        if character and character:FindFirstChild("Humanoid") then
            character.Humanoid.JumpPower = 75 -- Ancienne méthode (avant JumpHeight)
            if character.Humanoid.UseJumpPower == false then
                character.Humanoid.JumpHeight = 75 -- Nouvelle méthode
            end
        end
    end)

    -- Bouton pour réinitialiser le saut
    local jumpResetButton = Instance.new("TextButton")
    jumpResetButton.Size = UDim2.new(0, 150, 0, 40)
    jumpResetButton.Position = UDim2.new(0, 170, 0, 90)
    jumpResetButton.BackgroundColor3 = Color3.fromRGB(255, 165, 0)
    jumpResetButton.Text = "Saut Normal (50)"
    jumpResetButton.TextColor3 = Color3.fromRGB(255, 255, 255)
    jumpResetButton.TextSize = 16
    jumpResetButton.Font = Enum.Font.SourceSans
    jumpResetButton.Parent = container

    jumpResetButton.MouseButton1Click:Connect(function()
        local character = game.Players.LocalPlayer.Character
        if character and character:FindFirstChild("Humanoid") then
            character.Humanoid.JumpPower = 50 -- Valeur par défaut
            if character.Humanoid.UseJumpPower == false then
                character.Humanoid.JumpHeight = 7.2 -- Valeur par défaut pour JumpHeight
            end
        end
    end)
end
